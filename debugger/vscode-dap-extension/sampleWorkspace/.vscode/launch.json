{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "starlingmonkey",
      "request": "launch",
      "name": "Debug main.js in Wasmtime",
      "program": "src/main.js",
      "component": "out/main.wasm",
      "stopOnEntry": true,
      "trace": true,
      "componentRuntime.executable": "wasmtime",
      "componentRuntime.options": [
        "serve",
        "-S",
        "cli,tcp,inherit-network",
        "--dir",
        "${workspaceFolder}::/",
        "--addr",
        "0.0.0.0:3000",
        "${component}"
      ]
    },
    {
      "type": "starlingmonkey",
      "request": "launch",
      "name": "Debug main.js in Spin",
      "program": "${workspaceFolder}/src/main.js",
      "component": "${workspaceFolder}/out/main.wasm",
      "stopOnEntry": false,
      "trace": true,
      "componentRuntime.executable": "spin",
      "componentRuntime.options": [
        "watch",
      ]
    },
    {
      "type": "starlingmonkey",
      "request": "launch",
      "name": "Debug main.js in JCO",
      "program": "${workspaceFolder}/src/main.js",
      "component": "${workspaceFolder}/out/main.wasm",
      "stopOnEntry": false,
      "trace": false,
      "componentRuntime.executable": "npx",
      "componentRuntime.options": [
        "jco",
        "serve",
        "--port",
        "3000",
        "${component}",
      ]
    },
  ]
}
